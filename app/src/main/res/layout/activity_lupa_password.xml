<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="110dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_notelp_lupapassword"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="No. Telpon"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#FF808080"
                android:inputType="number"
                android:background="@drawable/circle_edit_text"/>


            <EditText
                android:id="@+id/edt_password_lupapassword"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="New Password"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#FF808080"
                android:inputType="text"
                android:background="@drawable/circle_edit_text"/>

            <EditText
                android:id="@+id/edt_repassword_lupa"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="Re-Password"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#FF808080"
                android:inputType="text"
                android:background="@drawable/circle_edit_text"/>





        </LinearLayout>

        <Button
            android:id="@+id/btn_lupapassword"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textColor="#000000"
            android:background="@drawable/button_submit"/>


    </LinearLayout>
</RelativeLayout>