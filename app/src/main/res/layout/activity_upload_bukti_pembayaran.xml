<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund"
    tools:context=".Activity.User.UploadBuktiPembayaranActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/uploadbukti"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Nama                  :"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_nama_pembayaran"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000"
                        android:textSize="20dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Bulan                   :"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_bulan_pembayaran"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="20dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Tagihan :"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_jumlah_tagihan_pembayaran"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="20dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Upload Bukti Pembayaran :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/img_bukti_pembayaran"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"/>

                <Button
                    android:id="@+id/button_select_image"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Select Image"
                    android:textColor="#FFF"
                    android:background="@drawable/button_login"/>

                <Button
                    android:id="@+id/button_upload_pembayaran"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Upload Bukti Pembayaran"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFF"
                    android:background="@drawable/button_register"/>

            </LinearLayout>






        </androidx.cardview.widget.CardView>



    </LinearLayout>



    </LinearLayout>

</ScrollView>